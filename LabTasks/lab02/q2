#include<iostream>
using namespace std;

class array  {
   int rows;
   int cols;
   int **arr;
   public:
   array (int r , int c) {
   int ** arr = new int *[rows];
    for (int i=0;i<rows;i++) {
        arr[i] = new int [cols];
    }
   }

   void inputData() {
    cout<<"enter elements (" <<rows <<"x" <<cols << " )" <<endl;
    for (int i=0;i<rows;i++){
        for (int j=0;j<cols;j++){
            cin>> arr[i][j];
        }
    }
}
void displaying () {

    cout <<"displpaying aray" <endl;
    for (int i=0;i<rows;i++){
        for (int j=0;j<cols;j++){
            cout<< arr[i][j];
        }
        cout<<endl;
    }
}

// void resizeArray (int )

~ array() {

    for (int i=0;i<rows;i++) {
        delete[]arr[i];
    }
    delete[]arr;
}
};

    int main () {
        int r , c;
    cout<<"enter rows of the matrix"<<endl;
    cin>>r;
    cout<<"enter cols of the matrix : "<<endl;
    cin>>c;


    return 0;
}
