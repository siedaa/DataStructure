#include <iostream>

using namespace std;

#include <iostream>
using namespace std;

int main() {
    int rows;
    cout << "Enter number of teams (rows): ";
    cin >> rows;

    // Step 1: Create array of int* (each row is dynamic)
    int** arr = new int*[rows];
    int* sizes = new int[rows]; // store size of each row

    // Step 2: Store values in each row
    for (int i = 0; i < rows; i++) {
        cout << "\nEnter number of players in team " << i + 1 << ": ";
        cin >> sizes[i];

        arr[i] = new int[sizes[i]]; // allocate memory for row

        cout << "Enter scores of " << sizes[i] << " players:\n";
        for (int j = 0; j < sizes[i]; j++) {
            cin >> arr[i][j];
        }
    }

    // Step 3: Compute and display sum of each row
    cout << "\n--- Team Scores Summary ---\n";
    for (int i = 0; i < rows; i++) {
        int sum = 0;
        for (int j = 0; j < sizes[i]; j++) {
            sum += arr[i][j];
        }
        cout << "Sum of team " << i + 1 << " = " << sum << endl;
    }

    // Step 4: Proper memory deallocation
    for (int i = 0; i < rows; i++) {
        delete[] arr[i]; // delete each row
    }
    delete[] arr;   // delete row pointers
    delete[] sizes; // delete sizes array


    return 0;
}
