#include <iostream>
using namespace std;
#include <cmath>

int N; 
int board[20];   // board[row] = column where queen is placed
int solutions = 0;

// Check if we can place queen at (row, col)
bool isSafe(int row, int col) {
    for (int i = 0; i < row; i++) {
        // same column or diagonal clash
        if (board[i] == col || abs(board[i] - col) == abs(i - row))
            return false;
    }
    return true;
}

// Print one solution
void printBoard() {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (board[i] == j) cout << "Q ";
            else cout << ". ";
        }
        cout << endl;
    }
    cout << endl;
}

// Solve using backtracking
void solve(int row, bool &printed) {
    if (row == N) {
        solutions++;
        if (!printed) {   // print only first solution
            cout << "One valid board configuration:\n";
            printBoard();
            printed = true;
        }
        return;
    }

    for (int col = 0; col < N; col++) {
        if (isSafe(row, col)) {
            board[row] = col;    // place queen
            solve(row + 1, printed);
        }
    }
}

int main() {
    cout << "Enter N: ";
    cin >> N;

    bool printed = false;
    solve(0, printed);

    cout << "Total distinct solutions = " << solutions << endl;
    return 0;
}
