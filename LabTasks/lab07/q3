#include <iostream>
#include <string>
using namespace std;

struct Product {
    string name;
    int price;
    string description;
    string availability;
};

int partition(Product arr[], int low, int high) {
    int pivot = arr[high].price;
    int i = low - 1;

    for (int j = low; j < high; j++) {
        if (arr[j].price < pivot) {
            i++;
            Product temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
        }
    }

    Product temp = arr[i + 1];
    arr[i + 1] = arr[high];
    arr[high] = temp;

    return i + 1;
}

void quickSort(Product arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}

int main() {
    Product p[3];

    cout << "Enter details of 3 products:\n";
    for (int i = 0; i < 3; i++) {
        cout << "\nProduct " << i + 1 << " name: ";
        cin >> p[i].name;
        cout << "Price: ";
        cin >> p[i].price;
        cout << "Description: ";
        cin >> p[i].description;
        cout << "Availability (in stock / out of stock): ";
        cin >> p[i].availability;
    }

    quickSort(p, 0, 2);

    cout << "\nSorted Product List (By Price - Ascending):\n";
    cout << "-------------------------------------------------\n";
    cout << "Name\tPrice\tAvailability\tDescription\n";

    for (int i = 0; i < 3; i++) {
        cout << p[i].name << "\t" << p[i].price << "\t" << p[i].availability << "\t\t" << p[i].description << endl;
    }

    return 0;
}
