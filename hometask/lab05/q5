#include <iostream>
using namespace std;

// Recursive function to calculate sum of digits
int sumDigits(int n) {
    if (n == 0) return 0;
    return (n % 10) + sumDigits(n / 10);
}

// Nested recursion to keep reducing until single digit
int nestedSum(int n) {
    if (n < 10) return n;   //base casseee
    return nestedSum(sumDigits(n));
}

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    int result = nestedSum(num);
    cout << "Final single digit: " << result << endl;

    return 0;
}
